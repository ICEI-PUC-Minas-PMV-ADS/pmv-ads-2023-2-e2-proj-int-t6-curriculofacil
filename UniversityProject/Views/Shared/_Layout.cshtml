<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Currículo Fácil</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UniversityProject.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark custom-bg border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-layout-text-sidebar-reverse"></i> Currículo <span class="text-danger">Fácil</span>
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!--Remover esse ul e colocar os links do lado direito-->
                        
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {

                            <li class="nav-item">
                                <a class="btn btn-outline-success text-white" asp-area="" asp-controller="Usuarios" asp-action="Index">Olá, @User.Identity.Name</a>
                            </li>

                            <li class="nav-item">
                                <a class="btn btn-outline-danger" asp-area="" asp-controller="Usuarios" asp-action="Logout">Sair</a>
                            </li>

                        }else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Usuarios" asp-action="Login">Iniciar Sessão</a>
                            </li>

                            <li class="nav-item">
                                <a class="btn btn-outline-danger" asp-area="" asp-controller="Usuarios" asp-action="Create">Cadastrar</a>
                            </li>
                            
                        }
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="fixed-bottom custom-bg py-3">
        <p class="text-center text-white text-body-secondary">&copy; 2023 - Currículo Fácil - <a asp-area="" asp-controller="Home" asp-action="Privacy">Politíca de pricidade</a></p>
    </footer>
    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
