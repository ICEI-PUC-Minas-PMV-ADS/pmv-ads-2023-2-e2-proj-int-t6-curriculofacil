@model UniversityProject.Models.HistoricoProfissional

@{
    ViewData["Title"] = "Create";
}

<h4 class="h3 mb-3 mt-5 fw-normal">Histórico Profissional</h4>
<hr class="mb-5" />

<main class="container col-md-8 col-lg-8 py-5">
    <div class="col-md-12">
        <form asp-action="Create">
            <div class="row g-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Cargo" class="control-label"></label>
                    <input asp-for="Cargo" class="form-control" />
                    <span asp-validation-for="Cargo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Empregador" class="control-label"></label>
                    <input asp-for="Empregador" class="form-control" />
                    <span asp-validation-for="Empregador" class="text-danger"></span>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="Cidade" class="control-label"></label>
                        <input asp-for="Cidade" class="form-control" />
                        <span asp-validation-for="Cidade" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="Estado" class="control-label"></label>
                        <input asp-for="Estado" class="form-control" />
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="DataInicio" class="control-label"></label>
                        <input asp-for="DataInicio" class="form-control" />
                        <span asp-validation-for="DataInicio" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label asp-for="DataTermino" class="control-label"></label>
                        <input asp-for="DataTermino" class="form-control" />
                        <span asp-validation-for="DataTermino" class="text-danger"></span>
                    </div>
                </div>
                <!--<div class="form-group">
                    <label asp-for="CurriculoID" class="control-label"></label>
                    <select asp-for="CurriculoID" class ="form-control" asp-items="ViewBag.CurriculoID"></select>
                </div>-->
                <div class="form-group">
                    <input type="submit" value="Próximo" class="btn btn-custom" />
                </div>
            </div>  
        </form>
    </div>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
