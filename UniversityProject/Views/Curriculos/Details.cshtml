@model UniversityProject.Models.CurriculoPronto

@{
    ViewData["Title"] = "Details";
}

<main class="container col-md-8 col-lg-12 py-5" id="content">
    <div class="row g-1 mb-5">
        <div class="col-md-12">
            <div class="text-center fs-2">
                @Html.DisplayFor(model => model.DadosCurriculo.FirstName) @Html.DisplayFor(model => model.DadosCurriculo.LastName)
            </div>      
        </div>

        <div class="col-md-12">
            <div class="text-center">
                @Html.DisplayFor(model => model.DadosCurriculo.PhoneNumber)
            </div>
        </div>

        <div class="col-md-12">
            <div class="text-center">
                @Html.DisplayFor(model => model.DadosCurriculo.Address), @Html.DisplayFor(model => model.DadosCurriculo.City) - @Html.DisplayFor(model => model.DadosCurriculo.Estate)
            </div>
        </div>        
    </div>


    <div class="row g-1">

        <div class="col-md-12 mb-5">
            <div class="fs-4 mb-3">
                Histórico Profissional
                <hr class="mb-3 mt-3" />
            </div>
            <ul class="list-group list-group-flush list-unstyled">
                <li>@Html.DisplayFor(model => model.DadosHisProf.DataInicio) - @Html.DisplayFor(model => model.DadosHisProf.DataTermino)</li>
                <li>@Html.DisplayFor(model => model.DadosHisProf.Cargo)</li>
                <li>@Html.DisplayFor(model => model.DadosHisProf.Empregador) - @Html.DisplayFor(model => model.DadosHisProf.Cidade), @Html.DisplayFor(model => model.DadosHisProf.Estado)</li>
            </ul>
        </div>

        <div class="col-md-12 mb-5">
            <div class="fs-4 mb-3">
                Formação Acadêmica
                <hr class="mb-3 mt-3" />
            </div>
            <ul class="list-group list-group-flush list-unstyled">
                <li>@Html.DisplayFor(model => model.DadosFormacao.DataInicio) - @Html.DisplayFor(model => model.DadosFormacao.DataTermino)</li>
                <li>@Html.DisplayFor(model => model.DadosFormacao.InstDeEnsino)</li>
                <li>@Html.DisplayFor(model => model.DadosFormacao.CampoDeEstudo)</li>
                <li>@Html.DisplayFor(model => model.DadosFormacao.Situacao)</li>
            </ul>
        </div>

        <div class="col-md-12">
            <div class="fs-4 mb-3">
                Objetivo
                <hr class="mb-3 mt-3" />
            </div>
            <ul class="list-group list-group-flush list-unstyled">
                <li>@Html.DisplayFor(model => model.DadosCurriculo.Objetive)</li>
            </ul>
        </div>

        

    </div>

