@model Usuario

@{
    ViewData["Title"] = "Login";
}

<h1 class="h3 mb-3 mt-5 fw-normal">Faça o login abaixo</h1>

<hr class="mb-5" />

    <main class="form-signin container col-md-8 col-lg-6 py-5">
        <form asp-action="Login">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label asp-for="Email" for="floatingInput">E-mail</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Pass" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                <label asp-for="Pass" for="floatingPassword">Senha</label>
                <span asp-validation-for="Pass" class="text-danger"></span>
            </div>

            <button class="btn btn-custom w-100 py-2 mt-5 mb-5" type="submit">Entrar</button>
        </form>

        <h3 role="alert">@ViewBag.Message</h3>
    </main>
</>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}